<div class="user-container">
<p>Chatting with <%= render 'conversations/participants', conversation: @conversation %></p>

<div class="panel panel-default">
  <div class="panel-heading"><%= @conversation.subject %></div>

  <div class="panel-body">
    <div class="messages">
      <% @conversation.receipts_for(current_user).each do |receipt| %>
        <div class="media">
          <% message = receipt.message %>
          <div class="media-left">
            <%= image_tag user_avatar(current_user, 30), class:"rounded-circle"%> 
          </div>

          <div class="media-body">
            <h6 class="media-heading"><%= message.sender.name %></h6>
            <%= message.body %>
            <br>
            <i><%= message.created_at.strftime("%-d %B %Y, %H:%M:%S") %></i>
          </div>
        </div>
      <% end %>
    </div>
  <%= form_tag reply_conversation_path(@conversation), method: :post do %>
  <div class="form-group">
    <%= text_area_tag 'body', nil, cols: 3, class: 'form-control', placeholder: 'Type something...', required: true %>
  </div>
  <%= submit_tag "Send Message", class: 'btn btn-primary' %>
<% end %>
  </div>
</div>
</div>