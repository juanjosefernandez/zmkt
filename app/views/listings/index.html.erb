<% if user_signed_in? %>
  <%= "Current user id is: #{current_user.id}"%>
  <%= "Current user is: #{current_user.name}"%>
<% else %>
  <p>not signed in at the moment</p>
<% end %>
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-3">
        <div class="card">
          <div class="card-body">
          <%= link_to image_tag(listing.image, width:200), listing %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= number_to_currency(listing.price) %></p>
              <p><%= "Sold by #{listing.user.name}" %> </p>
              <% if (user_signed_in?) && (current_user == listing.user) %>
              <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
              <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
  <% end %>
