<div class="keep-shopping pv1 mt4 has-text-right">
  <%= link_to 'Keep Shopping', listings_path, class: 'btn btn-warning' %>
</div>
<hr />
<section class="section">
  <%= render(@cart.line_items) %>

  <div class="rows">
    <div class="col-sm-3">
      <%= button_to 'Empty Cart', @cart, method: :delete, data: { confirm: "Are you sure? " }, class: "btn btn-danger" %>
    </div>
    <div class="float-right">
      <h4 class="title is-4">
        <span class="f5 has-text-grey">Total:</span> <%= number_to_currency(@cart.total_price) %>
      </h4>
      <button id="checkout-button">Checkout</button>

    </div>
  </div>
</section>
